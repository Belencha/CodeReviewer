{
  "name": "code-reviewer",
  "version": "1.0.0",
  "description": "AI-powered code review agent for GitLab merge requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "gitlab",
    "code-review",
    "ai",
    "merge-request"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@gitbeaker/node": "^37.0.0",
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}