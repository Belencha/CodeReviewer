# AI Provider Configuration
# Options: 'ollama' (self-hosted, recommended for private VPN) or 'openai' (requires internet)
AI_PROVIDER=ollama

# Ollama Configuration (for self-hosted AI)
OLLAMA_URL=http://ollama:11434
# Recommended models: codellama:13b, mistral:7b, deepseek-coder:6.7b, llama2:13b
OLLAMA_MODEL=codellama:13b

# OpenAI Configuration (only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# GitLab Configuration
# Use your private GitLab instance URL (e.g., https://gitlab.company.internal)
GITLAB_TOKEN=your_gitlab_personal_access_token_here
GITLAB_HOST=https://gitlab.company.internal

# Server Configuration
PORT=3000
DEBUG=false

# Webhook Secret (optional, for webhook verification)
WEBHOOK_SECRET=your_webhook_secret_here
